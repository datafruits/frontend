{{#if isEditing}}
  <span class="track-name">{{playlistTrack.displayName}}</span>
  <br/>
  Podcast Published Date
  <br/>
  <PikadayInput @value={{playlistTrack.podcastPublishedDate}} />
  <br/>
  <button {{action 'save'}} class="btn btn-primary">Save</button>
  <button {{action 'cancel'}} class="btn btn-primary">Cancel</button>
{{else}}
  <div class="flexcontainer">
    <span class="left track-name">{{playlistTrack.displayName}}</span>
    <span class="left track-name">{{playlistTrack.track.formattedDuration}}</span>
    <button {{action 'editPlaylistTrack'}} class="edit-playlist-track btn btn-primary">
      <i class="fa fa-pencil"></i>
    </button>
    <button {{action 'deleteFromPlaylist'}} class="btn delete-from-playlist">
      <i class="fa fa-times"></i>
    </button>
  </div>
{{/if}}
