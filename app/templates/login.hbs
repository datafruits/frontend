<div class="w-1/3">
  <h1 class="mb6 text-center">Sign in</h1>

  <form {{action "signIn" on="submit"}}>
    <div>
      <label>Login</label><br>
      <Input @type="text" @value={{login}} @autofocus={{true}} @autocapitalize="off" />
    </div>

    <div>
      <label>Password</label><br>
      <Input @type="password" @autocomplete="off" @value={{password}} />
    </div>

    <div>
      <label>Remember Me</label>
      <Input @type="checkbox" @checked={{rememberMe}} />
    </div>

    <div><Input @type="submit" class="bg-purple-600 hover:bg-purple-500 text-white font-bold py-2 px-2 rounded" @value="Login" /></div>
  </form>
</div>
